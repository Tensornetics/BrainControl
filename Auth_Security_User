def authenticate_user():
    print("Authenticating user...")
    
    # Prompt user for login credentials
    username, password = get_credentials()
    
    # Verify credentials
    user = verify_credentials(username, password)
    
    # Grant access if credentials are valid
    if user:
        grant_access()
    else:
        deny_access()
        
